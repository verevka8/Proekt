<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="4dp"
    tools:context=".FragmentsAction.DefaultFragment.MainMenu">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="342dp"
        android:layout_height="267dp"
        android:layout_marginTop="74dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_createSettings" />

    <ImageButton
        android:id="@+id/imageButton_exit"
        android:layout_width="49dp"
        android:layout_height="49dp"
        android:background="#00FFFFFF"
        android:rotationX="4"
        android:rotationY="180"
        android:src="@drawable/baseline_exit_to_app_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButton_createSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="95dp"
        android:background="#00FFFFFF"
        android:rotationX="-180"
        android:rotationY="-180"
        android:src="@drawable/baseline_library_add_24"
        app:layout_constraintEnd_toStartOf="@+id/imageButton_connect"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_createSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/CreateSettings"
        app:layout_constraintEnd_toEndOf="@+id/imageButton_createSettings"
        app:layout_constraintStart_toStartOf="@+id/imageButton_createSettings"
        app:layout_constraintTop_toBottomOf="@+id/imageButton_createSettings" />

    <ImageButton
        android:id="@+id/imageButton_connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="95dp"
        android:background="#00FFFFFF"
        android:src="@drawable/baseline_add_link_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageButton_createSettings"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/ConnectTitle"
        app:layout_constraintEnd_toEndOf="@+id/imageButton_connect"
        app:layout_constraintStart_toStartOf="@+id/imageButton_connect"
        app:layout_constraintTop_toBottomOf="@+id/imageButton_connect" />



</androidx.constraintlayout.widget.ConstraintLayout>